<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/connectionFormFragment"
    tools:context="elkstech.com.sftpclient.fragments.ConnectionFormFragment">

    <!-- TODO: Update blank fragment layout -->
    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:text="@string/hello_blank_fragment" />-->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:orientation="vertical">
        <TableRow android:layout_gravity="center" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/connectionName"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Connection Name"
                android:inputType="textNoSuggestions" />
        </TableRow>
        <TableRow android:layout_marginTop="10dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
            <EditText
                android:id="@+id/hostName"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions"
                android:hint="Hostname or IP Address"
                />
        </TableRow>
        <TableRow android:layout_marginTop="10dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
            <EditText
                android:id="@+id/port"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Port" />
        </TableRow>
        <TableRow android:layout_marginTop="10dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
            <EditText
                android:id="@+id/userName"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions"
                android:hint="Username" />
        </TableRow>
        <TableRow android:layout_marginTop="10dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/password"
                android:inputType="textPassword"
                android:hint="Password"/>
        </TableRow>
        <TableRow android:layout_marginTop="10dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/keyBasedAuth"
                android:onClick="onKeyBasedAuthClick"
                android:text="Key-based Authentication" />
        </TableRow>
        <TableRow android:visibility="visible" android:id="@+id/keyOptions" android:layout_marginTop="10dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/keyPath"
                android:inputType="textNoSuggestions"
                android:hint="Path to Key"/>
            <Button
                android:id="@+id/selectKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:onClick="selectKey"
                android:layout_weight="1"
                android:visibility="visible"
                android:text="Browse" />
        </TableRow>
        <TableRow android:layout_marginTop="10dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
            <Button
                android:id="@+id/saveConnection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="1"
                android:onClick="saveConnection"
                android:text="Save Connection" />
        </TableRow>

    </TableLayout>



</FrameLayout>
